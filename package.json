{
  "name": "uss-wasp-game",
  "version": "0.1.0",
  "description": "USS Wasp (LHD-1) - Amphibious Assault Wargame Rules Engine and Balance Simulation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ai": "npm run build && npx tsx tests/ai/run-comprehensive-ai-test.ts",
    "test:ai:strict": "npm run build && npx tsx tests/ai/test-ai-strict.js",
    "test:ai:gaps": "npm run build && npx tsx tests/ai/test-ai-system-gaps.ts",
    "test:ai:comprehensive": "npm run test:ai && npm run test:ai:strict && npm run test:ai:gaps",
    "test:balance": "npm run build && npx tsx tests/balance/run-balance-tests.ts",
    "simulate": "npm run build && npx tsx src/simulation/run-simulation.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "start": "node dist/index.js",
    "prepare": "husky",
    "deps:pin": "node scripts/pin-dependencies.js",
    "deps:audit": "npm audit && npm outdated",
    "actions:pin": "node scripts/pin-github-actions.js",
    "test:personality": "node scripts/run-personality-matchups.js"
  },
  "keywords": [
    "uss-wasp",
    "lhd-1",
    "wargame",
    "amphibious-assault",
    "simulation",
    "rules-engine",
    "balance-testing",
    "typescript",
    "hex-grid",
    "ai"
  ],
  "author": "Jason",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "20.19.11",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "eslint": "8.57.1",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "9.1.7",
    "jest": "30.0.5",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  },
  "dependencies": {},
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
