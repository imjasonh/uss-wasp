echo "🔍 Running pre-commit checks..."

# Run TypeScript compilation check
echo "📝 TypeScript compilation check..."
npm run typecheck
if [ $? -ne 0 ]; then
  echo "❌ TypeScript compilation failed!"
  exit 1
fi

# Run code formatting
echo "🎨 Code formatting..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "❌ Code formatting failed!"
  exit 1
fi

# Run strict linting (zero errors allowed, warnings permitted)
echo "🔍 Strict linting check..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed! All errors must be fixed before commit."
  echo "💡 Run 'npm run lint' to see issues and 'npm run lint:fix' to auto-fix."
  exit 1
fi

# Run tests to ensure nothing is broken
echo "🧪 Running tests..."
npm test -- --silent
if [ $? -ne 0 ]; then
  echo "❌ Tests failed!"
  exit 1
fi

echo "✅ Pre-commit checks completed!"